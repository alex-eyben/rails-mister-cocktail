
<div class="container mt-5">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="mt-3 col-12 col-md-6 col-lg-3">
        <div class="card" style="background-image: url('<%= cl_image_path cocktail.photo.key, height: 350, width: 300, crop: :fill %>');">
          <div class="card-description">
            <h2><%= cocktail.name %></h2>
          </div>
          <%= link_to "", cocktail_path(cocktail), class: 'card-link' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
