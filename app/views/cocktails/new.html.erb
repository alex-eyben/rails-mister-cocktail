
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1>Create a new cocktail</h1>
      <br>
      <%= simple_form_for @cocktail do |f| %>
        <%= f.input :name %>
        <%= f.input :photo, as: :file %>
        <br>
        <%= f.button :submit, class: 'btn btn-outline-secondary' %>
      <% end %>
      <br>
    </div>
  </div>
</div>
